
<!-- Cuisine part -->

<div class="cuisineContainer">
  <div class="grid-cuisineItem">
    <div class="cuisineImage">
    <%= cl_image_tag @cuisine.image, class:"image",  alt: @cuisine.name  %>
    </div>
  </div>

  <div class="grid-cuisineItem" id="gridCuisineItem">
      <h2 ><%= @cuisine.name %> recipes</h2>
