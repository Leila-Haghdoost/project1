    <p class="editText">
     <%= link_to 'Edit This Cuisine', edit_cuisine_path(@cuisine) %>
     |
     <%= link_to 'Delete This Cuisine', cuisine_path(@cuisine), method: 'delete'%>
   </p>
  </div>

</div>






<!-- Recipe part -->


<div class="recipesText">
<h4>Recipes:</h4>
</div>

<div class="recipeDisplay">
  <% @cuisine.recipes.each do |recipe| %>
  <div class="row">
      <div class="col col-2">
        <%= cl_image_tag recipe.image, size:"140x140", class:"recipeGride"%>
      </div>
      <div class="col col-10">
        <div class="row">
          <div class="col col-details">
            <%= link_to recipe.name, recipe_path(recipe.id), id: "recipesName"%>
              <!-- <hr> -->
          </div>
        </div>
        <div class="row">
          <div class="col col-details">
            <%= recipe.description%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


</div>
