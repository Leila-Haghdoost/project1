<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', cuisines_path %>
      |
      <%= link_to 'Create New Cuisine', new_cuisine_path %>
      |
      <%= link_to 'Create New Recipe', new_recipe_path %>

      |

      <% if @current_user.present? %>
        Welcome, <%= @current_user.name %>
        |
        <%= link_to 'Logout', login_path, method: 'delete' %>
        |
        <%= link_to 'My Favourite List', favlist_path(@current_user.favlists.first.id) %>

      <% else %>
        <%= link_to 'Login', login_path %>
        |
        <%= link_to 'Sign up', new_user_path %>
      <% end %>
    </nav>


    <%= yield %>
  </body>
</html>
