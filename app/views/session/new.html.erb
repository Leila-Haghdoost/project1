<h1>Login</h1>

<% if flash[:error] %>
<strong><%= flash[:error] %></strong> <!-- # if they get a password wrong  -->
<br>
<% end %>


<%= form_tag login_path do %>
<div class="form-group">
<%= label_tag :email%>
<%= email_field_tag :email, nil , class:"form-control", placeholder:"Enter email" %>
 </div>
 <div class="form-group">
<%= label_tag :password %>
<%= password_field_tag :password, nil , class:"form-control", placeholder:"Password" %>
 </div>
<%= submit_tag 'Login' , class:"btn btn-primary"%>
<% end %>
