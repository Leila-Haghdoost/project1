<div class="login">
<h1>Login</h1>
</div>

<% if flash[:error] %>
<strong><%= flash[:error] %></strong> <!-- # if they get a password wrong  -->
<br>
<% end %>

<div id="login" class="form-group" >
<%= form_tag login_path do %>
<span>
<%= label_tag :email%>
<%= email_field_tag :email, nil , class:"form-control", placeholder:"Enter email" %>
</span>
 <span>
<%= label_tag :password %>
<%= password_field_tag :password, nil , class:"form-control", placeholder:"Password" %>
</span>
<br>
<%= submit_tag 'Login' , class: "btn btn-outline-info"%>
<% end %>
</div>
