

<h4 class="favourites">Your Favourites List</h4>
<div class="recipeDisplay">
  <% @user.favourites.each do |recipe| %>
  <div class="row">
      <div class="col col-2">
        <%= cl_image_tag recipe.image, size:"140x140", class:"recipeGride"%>
      </div>
      <div class="col col-10">
        <div class="row">
          <div class="col col-title">
            <h5><strong><%= link_to recipe.name, recipe_path(recipe.id) %></strong>

            <%= link_to 'Remove', unfavourite_recipe_path(recipe.id, from: 'list') %>
            </div>
          </div>
          <div class="row">
            <div class="col col-details">
              <%= recipe.description%>
            </div>
          </div>
      </div>
  </div>
<% end %>
</div>
<!--
The above link_to will create a link like:
<a href="/recipes/136/unfavourite?from=list"></a>
-->
