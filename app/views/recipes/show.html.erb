
<h2><%= @recipe.name %></h2>

<br>
<p><%= @recipe.description %></p>

<%=cl_image_tag  @recipe.image, size:"300x300", alt: @recipe.name, class: 'eachrecipeimge'%>

</br>

  <% if @list.recipes.include? @recipe%>
    <%= link_to 'Remove from your Favourite list', unfavourite_recipe_path(@recipe.id) %>
  <% else %>
    <%= link_to 'Add to your Favourite list', favourite_recipe_path(@recipe.id) %>
  <% end %>

|
<%= link_to 'Edit This Recipe', edit_recipe_path(@recipe), id: "#{@recipe.id}" %>
|
<%= link_to 'Delete This Recipe', recipe_path(@recipe), method: 'delete'%>




<p>Name: <%= @recipe.name %></p>
<p>Description: <%= @recipe.description %></p>
<p>Serves: <%= @recipe.serves %></p>
<p>PREP: <%= @recipe.prep %></p>
<p>Cook: <%= @recipe.cook %></p>
<textarea name="textarea" rows="10" cols="50">Ingredients: <%= @recipe.ingredients %></textarea>
<p>Instruction: <%= @recipe.instruction %></p>

</br>


<h4>Reviews:</h4>

<% @recipe.reviews.each do |review| %>

<p> <i class="fas fa-thumbs-up"></i></i></i><%= review.rating%></p>
<p>Comment:<%= link_to review.comment, review_path(review.id)%></p>

<%= link_to 'Add a review', review_path %>


<% end %>
